<% include _header %>

<h1>Edit your Profile</h1>

<form action="/edit" method="post">
  <input type="text" name="displayname" class="form-control" placeholder="Display name" value="<%= currentUser.displayName || '' %>">
  <textarea name="bio" class="form-control" placeholder="Tell us about yourself!" rows="8" cols="40">
    <%= currentUser.bio || '' %>
  </textarea>
  <input type="submit" class="btn btn-primary btn-block" value="Update">
</form>

<% include _footer %>
